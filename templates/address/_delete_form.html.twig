<form method="post" action="{{ path('app_address_delete', {'id': address.id}) }}" onsubmit="return confirm('Etes vous certain(e) de vouloir supprimer cette adresse?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id) }}">
    <button class="btn btn-border-fill btn-block btn-outline-danger mt-2 mb-2">Supprimer</button>
</form>